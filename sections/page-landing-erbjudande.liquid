
<div class="container max-w-screen-sm text-center py-20">
  <h1>
    {{ section.settings.custom_text_title }}
  </h1>
  <div class="mb-8">
    {{ section.settings.custom_text_body }}
  </div>
  <a href="{{ routes.root_url }}{{ section.settings.custom_href_link }}" class="button secondary items-center inline-flex">
    {{ section.settings.custom_text_link }}
    <svg aria-hidden="true" class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
  </a>
</div>

{% schema %}
  {
    "name": "Landing erjudande",
    "settings": [
      {
        "id": "custom_text_title",
        "type": "text",
        "label": "H1",
        "default": "TACK! Vi vill ge tillbaka något."
      },
      {
        "id": "custom_text_body",
        "type": "richtext",
        "label": "Text under H1",
        "default": "<p>Add your text here</p>"
      },
      {
        "id": "custom_href_link",
        "type": "text",
        "label": "Länktext",
        "default": "products/mandy-red-berries"
      },
      {
        "id": "custom_text_link",
        "type": "text",
        "label": "Länktext",
        "default": "Köp nu"
      }
    ]
  }
{% endschema %}